#!/usr/bin/env php

<?php

require_once __DIR__ . '/../vendor/autoload.php';

use function Hexlet\Code\genDiff as genDiff;

$doc = <<<DOC
Generate diff

Usage:
  gendiff <filepath1> <filepath2>
  gendiff (-h|--help)
  gendiff (-v|--version)

Options:
  -h --help     Show this screen.
  --version     Show version.

DOC;

$args = Docopt::handle($doc, array('version' => 'Gendiff 0.1a'));

$diff_data = genDiff($args['<filepath1>'], $args['<filepath2>']);

print_r($diff_data);

?>